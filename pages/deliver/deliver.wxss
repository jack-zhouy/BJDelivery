/* DETAIL */
.order-details{
  display: flex;
  position: relative;
  padding: 30rpx;
  margin-bottom: 40rpx;
  background: #175782;
  font-size: 12px;
  color: #fff;
}
.order-synopsis{
  flex: 1;
}
.order-cover{
  position: relative;
  margin-right: 10px;
}
.order-cover .cover{
  width: 244rpx;
  height: 340rpx;
}
.order-title{
  font-size: 18px;
  line-height: 46rpx;
}
.order-brief{
  font-size: 14px;
  height: 44rpx;
  line-height: 44rpx;
}
.order-title, .order-brief{
	text-overflow: ellipsis;
	white-space: nowrap;
  overflow: hidden;
}
.order-brief .wish{
  margin-right: 4px;
  color: #fea54c;
}
.order-rating{
  margin-bottom: 20rpx;
  font-size: 14px;
  line-height: 30rpx;
}
.order-rating .rating{
  float: left;
  margin-right: 6px;
  background-image: url(../../images/i_star.png);
}
.order-rating .star{
  background-image: url(../../images/i_stars.png);
}
.order-rating .rating, .order-rating .star{
   width: 150rpx;
   height: 30rpx;
   background-repeat: no-repeat;
   background-size: cover;
}
.order-desc{
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  font-size: 14px;
  line-height: 2;
  background: linear-gradient(180deg,#e1e1e1,#e1e1e1 50%,transparent 0) 0 bottom/100% 3px no-repeat;
  
}
.order-desc .title{
  margin-bottom: 20rpx;
  font-size: 14px;
  font-weight: 700;
}
.order-desc .desc-limit{
  height: 84px;
  overflow: hidden;
}
.order-desc .desc-button{
  padding: 40rpx;
  text-align: center;
}

.order-photos{
  padding: 0 30rpx 50rpx 30rpx;
  margin-bottom: 40rpx;
  background: linear-gradient(180deg,#e1e1e1,#e1e1e1 50%,transparent 0) 0 bottom/100% 1px no-repeat;
  line-height: 2;
  white-space:nowrap;
  overflow: hidden;
}
.order-photos .title{
  margin-bottom: 30rpx;
  font-size: 14px;
  font-weight: 700;
}
.order-photos .photo{
  width: 90px;
  height: 70px;
  margin-right: 4px;
}

.order-comments{
  padding: 0 30rpx;
  font-size: 13px;
  line-height: 2;
}
.order-comments .title{
  margin-bottom: 30rpx;
  font-size: 14px;
  font-weight: 700;
}
.order-comment{
  position: relative;
  padding-left: 80rpx;
  padding-bottom: 30rpx;
  margin-bottom: 40rpx;
  background: linear-gradient(180deg,#e1e1e1,#e1e1e1 50%,transparent 0) 0 bottom/100% 1px no-repeat;
}
.order-comment .avatar{
  position: absolute;
  left: 0;
  top: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 60px;
}
.order-comment .time{
  float:right;
  color: gray;
}

.order-footer{
  font-size: 13px;
  text-align: center;
  margin-bottom: 160rpx;
}

.order-buy{
  position: fixed;
  bottom: 0;
  width: 100%;
  background:#fff linear-gradient(180deg,#e1e1e1,#e1e1e1 50%,transparent 0) 0 0/100% 1px no-repeat;
  text-align: center;
}
.order-buy .btn-buy{
  display: block;
  margin: 20rpx 30rpx;
  background-color: #ff4d64;
  font-size: 20px;
  line-height: 80rpx;
  color: #fff;
  border-radius: 4px;
}


.info {
	background: white;
	margin-top: 10px;
}

/*商品信息*/
.info .header {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	font-size: 14px;
	color: #3d3d3d;
	border-bottom: 1px solid #eee;
}

/*logo图标*/
.logo {
	width: 30px;
	height: 30px;
	margin: 5px;
}
/*清单*/
.list {
	display: flex;
	flex-direction: column;
}
/*每行*/
.item {
	display: flex;
	flex-direction: row;
	line-height: 40px;
	color: #666;
	border-bottom: 1px solid #eee;
	margin-left: 10px;
	font-size: 14px;
	/*relative供arrow参照用*/
	position: relative;
	/*justify-content: space-between;*/
}

.item:last-child {
	border-bottom: 0;
}

.arrow {
	content: " ";
	height: 6px;
	width: 6px;
	border-width: 2px 2px 0 0;
	border-color: #ccc;
	border-style: solid;
	transform:rotate(45deg);
	position: absolute;
	margin-top: -4px;
	top: 50%;
	right: 15px;
}



/*商品名称*/
.title {
	margin-left: 10px;
	flex: 8;
}

/*数量*/
.quantity {
	color: #ccc;
	flex: 1;
	margin-right: 5px;
}

.quantity:before {
	content: "× "
}

/*价格*/
/*价格*/
.price {
	flex: 1;
	font-size: 18px;
	color: #ff6000;
}

/*配送费*/
.express-label {
	/*width: 90%;*/
  color: #3d3d3d;
	margin-left: 10px;
	flex: 9;
}

.express-fee {
	/*width: 10%;*/
	flex: 1;
}


.item .amount {
	width: 100%;
	text-align: right;
	padding-right: 10px;
}

.ui-btn{
  position: absolute;
  left: 0;
  top: 50%;
  width: 100%;
  padding: 10rpx 0;
  text-align: center;
  border-radius: 6px;
  box-sizing:border-box;
  transform: translateY(-50%);
}
.ui-btn-red{
  border: 1px solid #ff4d64;
  color: #ff4d64;
}
.ui-btn-blue{
  border: 1px solid #37b7ff;
  color: #37b7ff;
}

.list-sale{
  position: absolute;
  margin-top:10rpx;
  right: 30rpx;
  top: 50%;
  width: 150rpx;
}

.list-thumb{
  float: right;
  position: relative;
  margin-right: 10px;
  margin-top: 10px;
}
.list-thumb .thumb{
  width: 60rpx;
  height: 60rpx;
}