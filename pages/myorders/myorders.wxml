        <view class="list-brief">
          <text class="wish">收货人：{{item.object.recvName}} | </text>
          <text>电话：{{item.object.recvPhone}}</text> 
        </view>
        <view class="list-brief">{{item.object.createTime}}</view>
      </view>
    </view>
